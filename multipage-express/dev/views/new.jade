extends layout

block content
  form(method='post' action='/new')
    fieldset
    .form-group
      label(for='pageurl') Page Url
      input#pageurl.form-control(type='text', name='pageurl' placeholder='Page Url')
    .form-group
      label(for='pagename') Page Name
      input#pagename.form-control(type='text', name='pagename' placeholder='Page Name')
    .form-group
      label(for='pagecontent') Page Url
      input#pagecontent.form-control(type='text', name='pagecontent' placeholder='Page Content')
    .form-group
      button.btn.btn-primary(type="submit") Add       
